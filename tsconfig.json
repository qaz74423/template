{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],

    // 可以使用@hooks等等
    "baseUrl": ".",
    "paths": {
      "@hooks*":["./src/hooks*"],
      "@components*":["./src/components*"],
      "@utils*":["./src/utils*"],
      "@view*":["./src/views*"],
      "@AppService":["./src/AppService.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
